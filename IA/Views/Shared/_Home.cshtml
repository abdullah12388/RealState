@model IA.Models.users

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,900|Playfair+Display:400,700,900 " rel="stylesheet">
    <link rel="stylesheet" href="~/Scripts/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/Scripts/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Scripts/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Scripts/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Scripts/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Scripts/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="~/Scripts/css/jquery.fancybox.min.css">

