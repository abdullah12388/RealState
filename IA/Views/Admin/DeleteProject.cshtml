@model List<IA.Models.projects>

    <div>
        <h3 style="text-align: center;">Projects</h3>
        <hr />
        <div class="row" style="width:100%;font-size:20px;">
            <div class="col-lg-2">Name</div>
            <div class="col-lg-1">Salary</div>
            <div class="col-lg-3">Descriptions</div>
            <div class="col-lg-1">Area</div>
            <div class="col-lg-2">Status</div>
            <div class="col-lg-1">Progress</div>
            <div class="col-lg-1"></div>
            <div class="col-lg-1"></div>
        </div>
        <hr />
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row" style="width:100%">
                <div class="col-lg-2">@Html.DisplayFor(model => model[i].pName)</div>
                <div class="col-lg-1">@Html.DisplayFor(model => model[i].pSalary)</div>
                <div class="col-lg-3">@Html.DisplayFor(model => model[i].pDescription)</div>
                <div class="col-lg-1">@Html.DisplayFor(model => model[i].pArea)</div>
                @if (Model[i].pStatus == 1)
                {
                    <div class="col-lg-2">Not Assigned</div>
                }
                else
                {
                    <div class="col-lg-2">Assigned</div>
                }

                @if (Model[i].progress == 0)
                {
                    <div class="col-lg-1">Not Assigned</div>
                }
                else if(Model[i].progress == 1)
                {
                    <div class="col-lg-2">In Progress</div>
                }
                else
                {
                    <div class="col-lg-2">Delivered</div>
                }
                @*<div class="col-lg-1">@Html.DisplayFor(model => model[i].progress)</div>*@
                <div class="col-lg-1">@Html.ActionLink("Update", "UpdateProjectView", "Admin", new { id = Model[i].Id }, null)</div>
                <div class="col-lg-1">@Html.ActionLink("Delete", "DeleteProject", "Admin", new { id = Model[i].Id }, null)</div>
            </div>
            <hr />
        }

    </div>

